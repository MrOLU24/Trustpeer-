# Database
DATABASE_URL=sqlite:///./trustpeer.db
# For PostgreSQL: DATABASE_URL=postgresql://username:password@localhost/trustpeer

# JWT Secret
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production

# API Keys (for blockchain integration)
ICP_API_KEY=your-icp-api-key
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id

# Environment
ENVIRONMENT=development
DEBUG=True

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=43200

# Application Configuration
APP_NAME=TrustPeer P2P Escrow API
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=True

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:3001", "https://yourdomain.com"]
ALLOW_CREDENTIALS=True

# Blockchain Configuration
# Internet Computer Protocol
ICP_NETWORK=local
ICP_CANISTER_ID=your-canister-id
ICP_IDENTITY_PATH=~/.config/dfx/identity/default/identity.pem

# Ethereum/USDT Configuration
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id
ETHEREUM_PRIVATE_KEY=your-private-key-for-escrow-operations
USDT_CONTRACT_ADDRESS=0xdAC17F958D2ee523a2206206994597C13D831ec7

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@trustpeer.com

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=uploads/
ALLOWED_FILE_TYPES=["jpg", "jpeg", "png", "pdf", "doc", "docx"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/trustpeer.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600  # 1 hour in seconds

# External APIs
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/api/telegram/webhook

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id

# Payment Providers (for fiat payments)
PAYSTACK_SECRET_KEY=your-paystack-secret-key
PAYSTACK_PUBLIC_KEY=your-paystack-public-key
FLUTTERWAVE_SECRET_KEY=your-flutterwave-secret-key

# KYC/Identity Verification
JUMIO_API_TOKEN=your-jumio-api-token
JUMIO_API_SECRET=your-jumio-api-secret

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
